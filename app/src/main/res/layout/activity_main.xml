<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_t1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Gmail account"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_t2"
        app:layout_constraintTop_toBottomOf="@id/edit_t1"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="Theme"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_t3"
        app:layout_constraintTop_toBottomOf="@id/edit_t2"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="Message"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>


    <Button
        android:id="@+id/btn_send"
        app:layout_constraintTop_toBottomOf="@id/edit_t3"
        android:layout_marginTop="60dp"
        android:text="Send"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/purple_200"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>